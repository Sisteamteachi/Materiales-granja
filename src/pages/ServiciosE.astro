---
import Layout from "../layouts/Layout.astro"
import Carrusel from "../components/Carrusel.astro"
import {title,text,Carro_tanque,title_Carro_tanque} from '../js/servicesEPages'
---

<Layout title="Servicios Especiales">
    <main class="mt-10">
        <h1 class="text-center  text-5xl uppercase mt-4  font-semibold text-sky-800 max-[600px]:text-4xl  mb-2">{title}</h1>
        <p class="text-center  text-2xl uppercase   font-semibold max-[600px]:text-4xl  mt-3">{text}</p>
        <article class="w-full flex justify-center content-center mt-20">
            <section class="w-[60%] ">
                <h1 class="text-center  text-5xl uppercase mt-4  font-semibold text-sky-800 max-[600px]:text-4xl mb-6">{title_Carro_tanque}</h1>
                <Carrusel data={Carro_tanque} client:load/>
            </section>
        </article>
      </main>
</Layout>
